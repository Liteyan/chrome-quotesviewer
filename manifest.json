{
	"name": "Quotes Viewer",
	"description": "ツイート(not ポスト)の引用を表示する",
	"version": "1.0.0",
	"manifest_version": 3,
	"action": {
		"default_icon": "icon.png",
		"default_title": "クリックして引用を表示"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"scripting"
	],
	"background": {
		"service_worker": "background.js"
	}
}
